UID=1000
GID=1000

# Ports (change these if anything clashes on your machine)
FRONTEND_PORT=3003
BACKEND_HOST_PORT=5000
BACKEND_CONTAINER_PORT=8000

# UI → API (browser side)
NEXT_PUBLIC_BACKEND_URL=http://localhost:${BACKEND_HOST_PORT}

# SSR/API routes in Next → API (internal Docker network)
BACKEND_INTERNAL_URL=http://backend:${BACKEND_CONTAINER_PORT}

# Backend CORS/CSP (read by main.py)
FRONTEND_ORIGINS=http://localhost:${FRONTEND_PORT}
DEV_BACKEND_HTTP=http://localhost:${BACKEND_HOST_PORT}
DEV_BACKEND_WS=ws://localhost:${BACKEND_HOST_PORT}

# Optional extras for CSP (comma-separated if you ever need them)
# CSP_CONNECT_EXTRAS=wss://minimalgotronifylicious-backend.up.railway.app,ws://127.0.0.1:46630

USE_STUB=true
